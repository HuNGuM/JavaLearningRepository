<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create-clients-sequence" author="Dell">
        <createSequence incrementBy="50" sequenceName="clients_seq" startValue="1"/>
    </changeSet>

    <changeSet id="create-clients-table" author="Dell">
        <createTable tableName="clients">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_clients"/>
            </column>
            <column name="fio" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-unique-constraint-login-clients" author="Dell">
        <addUniqueConstraint columnNames="login" constraintName="uc_clients_login" tableName="clients"/>
    </changeSet>

    <changeSet id="add-unique-constraint-location-pools" author="Dell">
        <addUniqueConstraint columnNames="location" constraintName="uc_pools_location" tableName="pools"/>
    </changeSet>

    <changeSet id="add-not-null-location-pools" author="Dell">
        <addNotNullConstraint columnDataType="VARCHAR(100)" columnName="location" tableName="pools" validate="true"/>
    </changeSet>

    <changeSet id="add-not-null-name-pools" author="Dell">
        <addNotNullConstraint columnDataType="VARCHAR(100)" columnName="name" tableName="pools" validate="true"/>
    </changeSet>

    <changeSet id="add-not-null-schedule-pools" author="Dell">
        <addNotNullConstraint columnDataType="VARCHAR(100)" columnName="schedule" tableName="pools" validate="true"/>
    </changeSet>

</databaseChangeLog>